{
  "openapi": "3.1.0",
  "info": {
    "title": "Reference Object Example",
    "version": "1.0.0"
  },
  "paths": {
    "/pet/{id}": {
      "get": {
        "description": "Returns pets based on ID",
        "operationId": "getPet",
        "responses": {
          "default": {
            "description": "a pet to be returned",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Pet"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Pet": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      }
    }
  }
}
